<template xmlns="http://ws.apache.org/ns/synapse" name="removeTaskFromProject">
    <parameter name="taskId" description="Task id to be retrieved."/>
    <parameter name="project" description="The project to remove the task from."/>
    <sequence>
        <property name="uri.var.taskId" expression="$func:taskId"/>
        <payloadFactory media-type="json">
            <format>
                {
                    "data":{
                        "project":"$1"
                    }
                }
            </format>
            <args>
                <arg evaluator="xml" expression="$func:project"/>
            </args>
        </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <call>
            <endpoint>
                <http method="post"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/tasks/{uri.var.taskId}/removeProject"/>
            </endpoint>
        </call>
    </sequence>
</template>
